@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    font-family: 'Nirmala UI';
  }

  svg {
    display: inline-block;
  }
}

@layer utilities {
  .link_underline div > h2 + p a {
    @apply underline;
  }
  .cursor-button {
    @apply cursor-default sm:cursor-pointer;
  }
}
